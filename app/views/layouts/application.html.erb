<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp: <%= @title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css?family=Gugi|Montserrat:300,400,700" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1 class='logo'>Music App</h1>
      <% if current_user %>
        <ul>
          <li><%= current_user.email %></li>
          <li><%= button_to "Logout", session_url(current_user), method: :delete %></li>
        </ul>
      <% end %>
    </header>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
